{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@library/*": [
        "../src/*"
      ]
    },
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "src",
    "../src"
  ]
}