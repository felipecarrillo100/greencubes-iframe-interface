{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "ES2019",
    "module": "CommonJS",
    "strict": true,
    "skipLibCheck": true,
    "removeComments": false,

    // Add these for unused variable/parameter warnings
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src"]
}
